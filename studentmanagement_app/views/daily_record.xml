<odoo>
    <record id="view_daily_class_form" model="ir.ui.view">
        <field name="name">edu.daily.record.form</field>
        <field name="model">edu.daily.record</field>
        <field name="arch" type="xml">
            <form string="Daily Class Record">
                <header>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,done"
                           statusbar_colors='{"draft": "blue", "done": "green"}'/>
                    <button name="action_confirm"
                            type="object"
                            string="Mark Done"
                            class="btn-success"
 />
                    <button name="action_reset"
                            type="object"
                            string="Reset"
                            class="btn-secondary"
                           />
                </header>
                <sheet>
                    <group>
                        <field name="date" required="1"/>
                        <field name="class_id" required="1"/>
                        <field name="subject_id" required="1"/>
                        <field name="teacher_id" required="1"/>
                        <field name="topic"/>
                        <field name="notes" widget="text"/>
                    </group>
                    <notebook>
                        <page string="Attendance">
                            <field name="student_line_ids">
                                <list editable="bottom">
                                    <field name="student_id" />
                                    <field name="status"/>
                                    <field name="remarks"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
        <record id="view_daily_record_tree" model="ir.ui.view">
        <field name="name">edu.daily.record.list</field>
        <field name="model">edu.daily.record</field>
        <field name="arch" type="xml">
            <list string="Daily Records">
                <field name="date"/>
                <field name="class_id"/>
                <field name="subject_id"/>
                <field name="teacher_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>


    <record id="action_daily_record" model="ir.actions.act_window">
        <field name="name">Daily Records</field>
        <field name="res_model">edu.daily.record</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>