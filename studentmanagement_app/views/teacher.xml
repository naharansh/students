<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_teacher_form" model="ir.ui.view">
        <field name="name">teacher.form</field>
        <field name="model">edu.teacher</field>
        <field name="arch" type="xml">
            <form string="Teacher">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="subject_ids"/>
                        <field name="photo"/>
                        <field name="email"/>
                        <field name="phone"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_teacher_tree" model="ir.ui.view">
        <field name="name">teacher.list</field>
        <field name="model">edu.teacher</field>
        <field name="arch" type="xml">
            <list string="Teachers">
                <field name="name"/>
                <field name="subject_ids"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <record id="action_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">edu.teacher</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_studentmanagement_root" name="Student Management"/>


</odoo>