<odoo>
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">Student Form</field>
        <field name="model">student.model</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="student_id" readonly="1"/>
                        <field name="dob"/>
                        <field name="photo"/>
                        <field name="parent_name"/>
                        <field name="parent_contact"/>
                        <field name="address"/>
                        <field name="class_id"/>
                        <field name="status"/>
                        <field name="fee_due_ids"/> 
                       <field name="remaining_yearly_fee"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_student_list" model="ir.ui.view">
        <field name="name">Student list</field>
        <field name="model">student.model</field>
        <field name="arch" type="xml">
            <list string="Students">
                <field name="name"/>
                <field name="student_id"/>
                <field name="class_id"/>
                <field name="status"/>
               <field name="fee_due_ids"/> 
                <field name="remaining_yearly_fee"/> 
            </list>
        </field>
    </record>
    <!-- ACTION -->
    <record id="action_students" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.model</field>
        <field name="view_mode">list,form</field>
    </record>
    <!-- MENU -->
    <menuitem id="menu_edu_root" name="Education Management"/>
    <menuitem id="menu_students" name="Students" parent="menu_edu_root" action="action_students"/>
</odoo>