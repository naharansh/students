<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEW -->
    <record id="view_class_timetable_form" model="ir.ui.view">
        <field name="name">edu.class.timetable.form</field>
        <field name="model">edu.class.timetable</field>
        <field name="arch" type="xml">
            <form string="Weekly Timetable">
                <header>
                    <button name="action_generate_week" type="object" class="oe_highlight"
                            string="Generate Days"/>
                    <button name="action_add_daily_subjects"
            type="object"
            string="Add Daily Subjects"
            class="oe_highlight"
            icon="fa-plus"/>
            <button name="action_sync_daily_classes"
        type="object"
        string="Sync Daily Classes"
        class="btn-primary"
        icon="fa-refresh"/>
                  
                </header>
                <sheet>
                    <group>
                        <field name="class_id"/>
                        <field name="week_start"/>
                        <field name="week_end" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Day Lines">
                            <field name="timetable_line_ids">
                                <list editable="bottom">
                                    <field name="day_name"/>
                                    <field name="date_of_day" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Daily Classes (Auto Generated)">
                            <field name="daily_class_ids">
                                <list>
                                    <field name="date"/>
                                    <field name="teacher_id"/>
                                    <field name="subject_id"/>
                                    <field name="start_time"/>
                                    <field name="end_time"/>
                                    <field name="room"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- list VIEW -->
    <record id="view_class_timetable_list" model="ir.ui.view">
        <field name="name">edu.class.timetable.list</field>
        <field name="model">edu.class.timetable</field>
        <field name="arch" type="xml">
            <list>
                <field name="class_id"/>
                <field name="week_start"/>
                <field name="week_end"/>
            </list>
        </field>
    </record>
    <!-- CORRECT ACTION (ONLY ONE!) -->
    <record id="action_class_timetable" model="ir.actions.act_window">
        <field name="name">Weekly Timetable</field>
        <field name="res_model">edu.class.timetable</field>
        <field name="view_mode">list,form</field>
    </record>
    <!-- TIMETABLE LINE FORM -->
    <record id="view_timetable_line_form" model="ir.ui.view">
        <field name="name">edu.class.timetable.line.form</field>
        <field name="model">edu.class.timetable.line</field>
        <field name="arch" type="xml">
            <form string="Timetable Day Line">
                <sheet>
                    <group>
                        <field name="timetable_id"/>
                        <field name="day_name"/>
                        <field name="date_of_day" readonly="1"/>
                    </group>
                    <group string="Sessions">
                        <field name="session_ids">
                            <list editable="bottom">
                                <field name="teacher_id"/>
                                <field name="subject_id"/>
                                <field name="start_time"/>
                                <field name="end_time"/>
                                <field name="room"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- TIMETABLE LINE list -->
    <record id="view_timetable_line_list" model="ir.ui.view">
        <field name="name">edu.class.timetable.line.list</field>
        <field name="model">edu.class.timetable.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="timetable_id"/>
                <field name="day_name"/>
                <field name="date_of_day"/>
            </list>
        </field>
    </record>
    <!-- DAILY CLASS FORM -->
    <record id="view_daily_class_form" model="ir.ui.view">
        <field name="name">edu.class.daily.form</field>
        <field name="model">edu.class.daily</field>
        <field name="arch" type="xml">
            <form string="Daily Class">
                <sheet>
                    <group>
                        <field name="timetable_id"/>
                        <field name="class_id"/>
                        <field name="date"/>
                    </group>
                    <group>
                        <field name="teacher_id"/>
                        <field name="subject_id"/>
                    </group>
                    <group>
                        <field name="start_time"/>
                        <field name="end_time"/>
                        <field name="duration" readonly="1"/>
                        <field name="room"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- DAILY CLASS list -->
    <record id="view_daily_class_list" model="ir.ui.view">
        <field name="name">edu.class.daily.list</field>
        <field name="model">edu.class.daily</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="teacher_id"/>
                <field name="subject_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="room"/>
            </list>
        </field>
    </record>
    <record id="action_daily_class_create" model="ir.actions.act_window">
        <field name="name">Add Daily Class</field>
        <field name="res_model">edu.class.daily</field>
        <field name="view_mode">form</field>
        <!-- only form -->
        <field name="target">new</field>
        <!-- opens in a popup modal -->
        <field name="context">{'default_timetable_id': active_id}</field>
    </record>
</odoo>