<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Form View -->
  <record id="view_batch_class_form" model="ir.ui.view">
    <field name="name">batch.class.form</field>
    <field name="model">batch.class</field>
    <field name="arch" type="xml">
      <form string="Class / Batch">
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="capacity"/>
            <field name="start_date"/>
            <field name="end_date"/>
          </group>
          <group string="Students">
            <field name="student_ids" widget="many2many_tags"/>
          </group>
          <group string="Total Students" colspan="4">
            <field name="student_count" readonly="1"/>
          </group>
      
            <notebook>
              <page string="Class Timetable">
                <field name="timetable_ids" readonly="1" nolabel="1">
                  <list string="Timetable" create="false" delete="false">
                    <field name="class_id"/>
                    <field name="week_start"/>
                    <field name="week_end"/>
                          <field name="daily_class_ids"/>
                  </list>
                </field>
              </page>
            </notebook>
          
        </sheet>
      </form>
    </field>
  </record>

  <!-- List Views -->
  <record id="view_batch_class_list" model="ir.ui.view">
    <field name="name">batch.class.list.main</field>
    <field name="model">batch.class</field>
    <field name="arch" type="xml">
      <list string="Class / Batch">
        <field name="name"/>
        <field name="code"/>
        <field name="capacity"/>
        <field name="student_count"/>
      </list>
    </field>
  </record>
  <record id="view_class_list" model="ir.ui.view">
    <field name="name">batch.class.list.alt</field>
    <field name="model">batch.class</field>
    <field name="arch" type="xml">
      <list string="Classes">
        <field name="name"/>
        <field name="capacity"/>
        <field name="student_count"/>
      </list>
    </field>
  </record>
  <!-- Action -->
  <record id="action_batch_class" model="ir.actions.act_window">
    <field name="name">Classes</field>
    <field name="res_model">batch.class</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>