<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_daily_class_form" model="ir.ui.view">
        <field name="name">edu.daily.record.form</field>
        <field name="model">edu.daily.record</field>
        <field name="arch" type="xml">
            <form string="Daily Class Record">
                <header>
                    <!-- <button name="action_confirm" type="object" string="Confirm"
                            invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_mark_done" type="object" string="Mark Done"
                            invisible="state != 'confirmed'" class="btn-success"/>
                    <button name="action_reset" type="object" string="Reset"
                            invisible="state != 'done'" class="btn-secondary"/> -->
                    <field name="state" readonly="1" widget="statusbar"
                           statusbar_visible="draft,confirmed,done"
                           statusbar_colors='{"draft": "blue", "confirmed": "yellow", "done": "green"}'/>
                </header>
                <sheet>
                    <group>
                        <field name="date" required="1"/>
                        <field name="class_id" required="1"/>
                        <field name="subject_id" required="1"/>
                        <field name="teacher_id" required="1"/>
                         <field name="topic" required="1"/>
                        <field name="notes" widget="text"/>
                    </group>
                    <notebook>
                        <page string="Attendance">
                            <field name="student_line_ids">
                                <list editable="bottom">
                                    <field name="student_id" />
                                    <field name="status"/>
                                    <field name="remarks"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_daily_record" model="ir.actions.act_window">
        <field name="name">Daily Records</field>
        <field name="res_model">edu.daily.record</field>
        <field name="view_mode">list,form</field>
    </record>

   
</odoo>