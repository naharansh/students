<?xml version="1.0" encoding="utf-8"?>
<odoo>
   
    <record id="view_monthly_attendance_form" model="ir.ui.view">
        <field name="name">edu.attendence.form</field>
        <field name="model">edu.attendence</field>
        <field name="arch" type="xml">
            <form string="Monthly Attendance Report">
                <header>
                    <button name="action_generate" type="object"
                            string="Generate Report" class="btn-primary"/>
                    <button name="action_print_pdf" type="object"
                            string="Print Report" class="btn-secondary"/>
                </header>
                <sheet>
                    <group>
                        <field name="month" required="1"/>
                        <field name="class_id" required="1"/>
                    </group>

                    <!-- ONE2MANY LINES -->
                    <field name="line_ids">
                        <list editable="bottom">
                            <field name="student_id"/>
                            <field name="present_days"/>
                            <field name="absent_days"/>
                        </list>
                        <form>
                            <sheet>
                                <group>
                                    <field name="student_id" readonly="1"/>
                                    <field name="present_days" readonly="1"/>
                                    <field name="absent_days" readonly="1"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- =======================
         STANDALONE LINE FORM VIEW
         ======================= -->
    <record id="view_monthly_attendance_line_form" model="ir.ui.view">
        <field name="name">edu.monthly.attendence.line.form</field>
        <field name="model">edu.monthly.attendence.line</field>
        <field name="arch" type="xml">
            <form string="Attendance Line">
                <sheet>
                    <group>
                        <field name="report_id" readonly="1"/>
                        <field name="student_id" readonly="1"/>
                        <field name="present_days" readonly="1"/>
                        <field name="absent_days" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- =======================
         ACTION
         ======================= -->
    <record id="action_monthly_attendance" model="ir.actions.act_window">
        <field name="name">Monthly Attendance</field>
        <field name="res_model">edu.attendence</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
